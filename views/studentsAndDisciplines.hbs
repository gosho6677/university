<h1 class="title">Students and disciplines</h1>
<div class="table">
    <table>
        <tr>
            <th>Name</th>
            <th>Subjects</th>
            <th>Info</th>
        </tr>
        {{#each students}}
        <tr>
            <td>{{full_name}}</td>
            <td>
                {{#if enrolledSubjects}}
                    {{enrolledSubjects}}
                {{else}}
                    <p>Student isn't enrolled in any subjects.</p>
                {{/if}}
            </td>
            <td><a href="#">Add/remove disciplines</a></td>
        </tr>
        {{else}}
        <p>No students available ...</p>
        {{/each}}
    </table>
</div>