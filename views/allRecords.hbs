<h1 class="title">All records</h1>

<div class="table">
    <h2>Teachers table</h2>
    <table>
        <tr>
            <th>Title</th>
            <th>Name</th>
            <th>Number of taught subjects</th>
        </tr>
        {{#each teachers}}
        {{> teacher}}
        {{else}}
        <p>No teachers in database. <a href="/records/create/teacher">Please add some...</a></p>
        {{/each}}
    </table>
</div>

<div class="table">
    <h2>Students table</h2>
    <table>
        <tr>
            <th>Name</th>
            <th>Year in college</th>
        </tr>
        {{#each students}}
        {{> student}}
        {{else}}
        <p>No students in database. <a href="/records/create/student">Please add some...</a></p>
        {{/each}}
    </table>
</div>